# Environment Variables for LeadSignal

# Database (PostgreSQL)
DATABASE_URL=postgresql://user:password@localhost:5432/leadsignal

# Authentication
JWT_SECRET=your-jwt-secret-here

# Meta App (Facebook Developer)
META_APP_ID=your-meta-app-id
META_APP_SECRET=your-meta-app-secret
NEXT_PUBLIC_META_APP_ID=your-meta-app-id

# Webhook Secret (for Meta webhooks verification)
WEBHOOK_SECRET=leadsignal_webhook_secret_123

# Resend (Email)
RESEND_API_KEY=re_your_resend_api_key

# App URL (for email links)
NEXT_PUBLIC_APP_URL=https://your-domain.com
